<div class="text-logo page-width" style="background-color: {{ section.settings.bg_color }}">
  <div class="text-logo__image">
    {%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
    <img class="logo-bar__image lazyload"
      data-src="{{ img_url }}"
      data-widths="[180, 360, 540, 720]"
      data-aspectratio="{{ section.settings.image.aspect_ratio }}"
      data-sizes="auto"
      alt="{{ section.settings.image.alt }}">
  </div>
  <h2 class="text-logo__header">{{ section.settings.heading }}</h2>
  <p class="text-logo__paragraph">{{ section.settings.textarea }}</p>
</div>

{% schema %}
  {
    "name": "Text with logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "textarea",
        "label": "Text"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Color"
      }
    ],
    "presets": [
      {
        "name": "Text with logo"
      }
    ]
  }
{% endschema %}
