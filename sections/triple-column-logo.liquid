<div class="triple-column" style="background-color: {{ section.settings.bg_color }};">
  <h2 class="triple-column__header">{{ section.settings.heading }}</h2>
  <div class="triple-column__item-ctn">
    {% for block in section.blocks %}
      <div class="triple-column__item">
        <div class="triple-column__image">
          {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <img class="logo-bar__image lazyload"
            data-src="{{ img_url }}"
            data-widths="[180, 360, 540, 720]"
            data-aspectratio="{{ block.settings.image.aspect_ratio }}"
            data-sizes="auto"
            alt="{{ block.settings.image.alt }}">
        </div>
        <h3 class="triple-column__subheader">{{ block.settings.subheading | upcase }}</h3>
        <p class="triple-column__paragraph">{{ block.settings.textarea }}</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Triple column logo",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Subheading"
          },
          {
            "type": "textarea",
            "id": "textarea",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Triple column logo"
      }
    ]
  }
{% endschema %}
